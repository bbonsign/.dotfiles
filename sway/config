#############################################
# Read `man 5 sway` for a complete reference.
#############################################

font pango: FiraCode Nerd Font 10

# Position of window title: left|center|right
title_align center
show_marks yes

# Configure border style <normal|1pixel|pixel xx|none|pixel>
default_border pixel 2
default_floating_border normal

hide_edge_borders smart
# Only enable gaps on a workspace when there is at least one container
smart_gaps on
# draw borders on windows only if there is more than one window in a workspace
smart_borders on

gaps {
  inner 5
  outer 2
}

### Colors:
# class                 border  backgr. text    indicator child_border
client.focused          #2ac3de #285577 #ffffff #2e9ef4   #2ac3de 
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #600000 #dddddd #600000   #600000
client.placeholder      #000000 #0c0c0c #dddddd #000000   #0c0c0c
client.background       #dddddd


### Variables
# Logo key. Use Mod1 for Alt.
set {
  $mod Mod4

  $left  h
  $down  j
  $up    k
  $right l
}

# preferred terminal emulator
set $term kitty

# Application launcher
# Note: pass the final command to swaymsg so that the resulting window can be opened
# on the original workspace that the command was run on.
set $run_menu rofi -show drun --sorting-method fzf | xargs swaymsg exec --


### Output configuration
# You can get the names of your outputs by running: swaymsg -t get_outputs
# Example configuration:
#  output HDMI-A-1 resolution 1920x1080 position 1920,0
output * bg $HOME/Pictures/Wallpapers/Sunset-Of-The-Gods_by_Isaac-Sloan.jpg fill
# output DP-1 bg $HOME/Pictures/Wallpapers/mountain-unsplash-6-small.jpg fill
output "Unknown HP E243 CNK8491GW1" {
  pos 0 0 
  bg $HOME/Pictures/Wallpapers/mountain-unsplash-6-small.jpg fill
}

### Idle configuration
# Example configuration:
exec swayidle -w \
     timeout 300 'swaylock -f' \
     timeout 360 'swaymsg "output * dpms off"' \
        resume 'swaymsg "output * dpms on"' \
     before-sleep 'swaylock -f -c 000000' 
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 60 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.


### Input configuration
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.
# swaymsg -t get_inputs | jq -r '.[].identifier' | rg -S touch
exec_always swaymsg input type:touchpad {
  dwt              enabled
  tap              enabled
  natural_scroll   disabled
  middle_emulation enabled
}
# exec_always for firefox crashing on config reload
# https://bugzilla.mozilla.org/show_bug.cgi?id=1652820#c51
exec_always swaymsg input type:keyboard {
  repeat_delay 225
  repeat_rate  60
}



# Status Bar:
# Read `man 5 sway-bar` for more information about this section.
bar {
  id mybar
  position bottom
  strip_workspace_numbers yes
# swaybar_command waybar

  # When the status_command prints a new line to stdout, swaybar updates.
  # The default just shows the current date and time.
  status_command while $HOME/.config/sway/bar.py; do sleep 10; done
  colors {
    # format: element <border> <background> <text>
    statusline #ffffff
    background #32323255
    inactive_workspace #32323200 #32323200 #5c5c5c
    binding_mode #32323200 #32323200 #dcedec
  }
}

set {
  $ws_browser "1: "
  $ws_term    "2: "
  $ws_work    "3: "
}

workspace $ws_browser output eDP-1
workspace $ws_term    output DP-1
workspace $ws_work    output eDP-1
workspace 5           output DP-1
workspace 6           output DP-1
workspace 7           output DP-1
workspace 8           output DP-1
workspace 9           output DP-1
workspace 10          output DP-1

### Inlcude other files with config
set $mode_default "default"

include { 
  ./binds.config
  ./window_rules.config
  ./bind_mode_misc.config
  ./bind_mode_gaps.config
  ./bind_mode_normal.config
  /etc/sway/config.d/*
}
### Programs to execute
exec_always dunst
exec gammastep
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
exec "systemctl --user import-environment WAYLAND_DISPLAY XDG_CURRENT_DESKTOP"
exec "systemctl restart --user libinput-gestures.service"

