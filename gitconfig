	head = bold white
	branch = bold magenta
	remotebranch = blue
	tag = bold red

[interactive]
  diffFilter = delta --color-only

[merge]
	conflictstyle = diff3

[delta]
	; hyperlinks = true
	navigate = true
	side-by-side = true
  features = line-numbers decorations
  whitespace-error-style = 22 reverse

[delta "decorations"]
